description "Baragon Server Service"
author "EverTrue"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

exec <%= node['java']['java_home'] %>/bin/java -Xmx512m -Djava.net.preferIPv4Stack=true -jar /usr/share/java/<%= @baragon_jar %> server <%= @config_yaml %> >> /var/log/baragon/baragon_service.log 2>&1
