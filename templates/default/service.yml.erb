server:
  type: simple
  applicationContextPath: <%= node[:baragon][:server_app_context_path] %>
  connector:
    type: http
    port: <%= node[:baragon][:server_port] %>

zookeeper:
  quorum: <%= node[:baragon][:zk_hosts].join(',') %>  # comma separated list of ZK host:port goes here
  zkNamespace: <%= node[:baragon][:zk_namespace] %>    # base zk node goes here
  sessionTimeoutMillis: 60000
  connectTimeoutMillis: 5000
  retryBaseSleepTimeMilliseconds: 1000
  retryMaxTries: 3
