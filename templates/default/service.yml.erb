server:
  type: simple
  applicationContextPath: /baragon/v2
  connector:
    type: http
    port: <%= node[:baragon][:server_port] %>

zookeeper:
  quorum: <%= @zookeeper_hosts.join(',') %>  # comma separated list of ZK host:port goes here
  zkNamespace: baragon    # base zk node goes here
  sessionTimeoutMillis: 60000
  connectTimeoutMillis: 5000
  retryBaseSleepTimeMilliseconds: 1000
  retryMaxTries: 3
